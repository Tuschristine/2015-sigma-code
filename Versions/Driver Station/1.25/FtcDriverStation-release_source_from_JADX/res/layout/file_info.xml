                    <Button android:textSize="16sp" android:id="@id/file_delete_button" android:layout_width="-2" android:layout_height="-2" android:layout_marginRight="3dp" android:text="@string/file_delete_button" android:onClick="file_delete_button" android:layout_marginEnd="3dp" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <ListView android:id="@id/controllers" android:layout_width="-1" android:layout_height="-2" />
</LinearLayout>
