<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="1" android:id="@id/file_info_layout" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="-1" android:layout_height="-1" android:animateLayoutChanges="true">
    <TableLayout android:id="@id/file_buttons" android:layout_width="-1" android:layout_height="-2" android:stretchColumns="1" android:shrinkColumns="0">
        <TableRow android:id="@id/table_header" android:padding="5dp" android:layout_width="-2" android:layout_height="-2">
            <LinearLayout android:orientation="1" android:id="@id/linearLayout" android:layout_width="-2" android:layout_height="-2">
                <TextView android:textSize="20sp" android:id="@id/filename_editText" android:layout_width="300dp" android:layout_height="-2" android:text="@string/filename_editText" android:maxLength="200" />
